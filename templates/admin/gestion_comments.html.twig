{% extends 'admin/dashboard.html.twig' %}
{% block stylesheets %}{% endblock %}


{% block body %}
	<div class="row mt">
		<div class="col-md-12">
			<div class="content-panel">

				
				{% if comments %}
					<table class="table table-striped table-advance table-hover">
						<h4>
							<i class="fa fa-angle-right"></i>
							Gestion des commentaires</h4>
						<hr>
						<thead>
							<tr>
								<th style="min-width:100px">
									<i class="fa fa-bookmark"></i>
									Id commentaire</th>
								<th style="min-width:100px">
									<i class="fa fa-bullhorn"></i>
									Id membre</th>
								<th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-flag"></i>
									Id annonce</th>
                                    <th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-comments-o"></i>
									Commentaire</th>
                                <th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-calendar"></i>
									Date d'enregistrement</th>
								<th style="min-width:100px">
									<i class=" fa fa-edit"></i>Approuver</th>
                                <th style="min-width:100px">
									<i class=" fa fa-edit"></i>Masquer</th>
                                <th style="min-width:100px">
									<i class=" fa fa-edit"></i>Supprimer</th>
							</tr>
						</thead>
						<tbody>
							{% for comment in comments %}
								<tr>
									<td>
										<a href="basic_table.html#">{{ comment.id }}</a>
									</td>
									<td class="hidden-phone">{{ comment.user.id }}-{{ comment.user.pseudo}}</td>
									<td>{{ comment.annonce.id }}-{{ comment.annonce.titre}}</td>
									<td>{{ comment.commentaire }}</td>
									<td>{{ comment.dateEnregistrement | date() }}</td>
                                    <td>
                                    {% if comment.status == 2  %}
                                    <a href="{{ path('approuver_commentaire', {'id' : comment.id }) }}" class="btn btn-warning btn-xs">
											<i class="fa fa-eye"></i>
										</a>
                                    
                                    {% endif %}
                                    </td>
                                    <td>
                                     {% if comment.status == 1  %}
                                    <a href="{{ path('masquer_commentaire', {'id' : comment.id }) }}" class="btn btn-success btn-xs">
											<i class="fa fa-eye-slash"></i>
										</a>
                                    
                                    {% endif %}
                                    </td>
									<td>
										<a href="{{ path('comment_supprimer', {'id' : comment.id}) }}" class="btn btn-danger btn-xs">
											<i class="fa fa-trash-o "></i>
										</a> 
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>


				{% else %}
					<h2>Pas de commentaire!</h2>
				{% endif %}

			</div>
			<br><br>


			
		</div>
	{% endblock %}
	{% block javascripts %}{% endblock %}
