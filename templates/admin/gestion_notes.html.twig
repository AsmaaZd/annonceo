{% extends 'admin/dashboard.html.twig' %}
{% block stylesheets %}{% endblock %}


{% block body %}
	<div class="row mt">
		<div class="col-md-12">
			<div class="content-panel">

				
				{% if notes %}
					<table class="table table-striped table-advance table-hover">
						<h4>
							<i class="fa fa-angle-right"></i>
							Gestion des notes</h4>
						<hr>
						<thead>
							<tr>
								<th style="min-width:100px">
									<i class="fa fa-bookmark"></i>
									Id note</th>
								<th style="min-width:100px">
									<i class="fa fa-user"></i>
									Id membre1</th>
								<th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-user"></i>
									Id membre2</th>
                                    <th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-flag"></i>
									Note</th>
                                    <th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-comments-o"></i>
									Avis</th>
                                <th style="min-width:100px" class="hidden-phone">
									<i class="fa fa-calendar"></i>
									Date d'enregistrement</th>
                                <th style="min-width:100px">
									<i class=" fa fa-edit"></i>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for note in notes %}
								<tr>
									<td>
										<a href="basic_table.html#">{{ note.id }}</a>
									</td>
									<td class="hidden-phone">{{ note.user1.id }}-{{ note.user1.pseudo}}</td>
									<td class="hidden-phone">{{ note.user2.id }}-{{ note.user2.pseudo}}</td>
									<td>{{ note.note }}</td>
									<td>{{ note.avis }}</td>
									<td>{{ note.dateEnregistrement | date() }}</td>
                                    <td>
                                    {% if note.status == 2  %}
                                    <a href="{{ path('approuver_note', {'id' : note.id }) }}" class="btn btn-warning btn-xs">
											<i class="fa fa-eye"></i>
										</a>
                                    
                                    {% endif %}
                                    {% if note.status == 1  %}
                                    <a href="{{ path('masquer_note', {'id' : note.id }) }}" class="btn btn-success btn-xs">
											<i class="fa fa-eye-slash"></i>
										</a>
                                    
                                    {% endif %}
                                    <a href="{{ path('note_supprimer', {'id' : note.id}) }}" class="btn btn-danger btn-xs">
											<i class="fa fa-trash-o "></i>
										</a>
                                    </td>
								</tr>
							{% endfor %}
						</tbody>
					</table>


				{% else %}
					<h2>Pas de commentaire!</h2>
				{% endif %}

			</div>
			<br><br>
		</div>
	{% endblock %}
	{% block javascripts %}{% endblock %}
